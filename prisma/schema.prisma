generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String @id @default(uuid())
  name     String
  slug     String
  imageURL String

  products Product[]
}

model Product {
  id                 String  @id @default(uuid())
  name               String
  slug               String
  description        String
  basePrice          Decimal @db.Decimal(8, 2)
  imageURL           String
  discountPercentage Int     @default(0)
  categoryId         String

  category Category @relation(fields: [categoryId], references: [id])
}
